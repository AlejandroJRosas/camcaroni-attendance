{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@types/*": ["@types/*"]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"src/**/*",
		"@types/**/*" // Asegúrate de incluir la carpeta donde está tu declaración
	]
}
